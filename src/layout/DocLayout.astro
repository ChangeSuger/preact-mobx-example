---
import StarlightPage, { type StarlightPageProps } from '@astrojs/starlight/components/StarlightPage.astro';
import { sidebar } from '@/config/sidebar';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const fromtmatter: StarlightPageProps["frontmatter"] = {
  title: title,
  template: 'doc',
  next: false,
  prev: false,
};

const starlightpageProps: StarlightPageProps = {
  frontmatter: fromtmatter,
  sidebar: sidebar,
};
---

<StarlightPage {...starlightpageProps}>
  <div class="sl-markdown-content">
    <slot/>
  </div>
</StarlightPage>
